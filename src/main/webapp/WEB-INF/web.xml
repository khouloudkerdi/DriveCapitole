<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VisualiserPanier</servlet-name>
        <jsp-file>/vue/VisualiserPanier.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <jsp-file>/vue/Accueil.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlAjouterCrouses</servlet-name>
        <servlet-class>neopro.ctrl.CtrlAjouterCrouses</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlGererCrouses</servlet-name>
        <servlet-class>neopro.ctrl.CtrlGererCrouses</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListeCourses</servlet-name>
        <jsp-file>/vue/ListeCourses.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AjouterCourses</servlet-name>
        <jsp-file>/vue/AjouterCourses.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlMenu</servlet-name>
        <servlet-class>neopro.ctrl.CtrlMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlInserer</servlet-name>
        <servlet-class>neopro.ctrl.CtrlInserer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlModificationQuantite</servlet-name>
        <servlet-class>neopro.ctrl.CtrlModificationQuantite</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlAjouterProduitPanier</servlet-name>
        <servlet-class>neopro.ctrl.CtrlAjouterProduitPanier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlSupprimerProduitPanier</servlet-name>
        <servlet-class>neopro.ctrl.CtrlSupprimerProduitPanier</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VisualiserPanier</servlet-name>
        <url-pattern>/Panier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlAjouterCrouses</servlet-name>
        <url-pattern>/CtrlAjouterCrouses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlGererCrouses</servlet-name>
        <url-pattern>/CtrlGererCrouses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeCourses</servlet-name>
        <url-pattern>/ListeCourses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterCourses</servlet-name>
        <url-pattern>/AjouterCourses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlMenu</servlet-name>
        <url-pattern>/CtrlMenu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlInserer</servlet-name>
        <url-pattern>/CtrlInserer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlModificationQuantite</servlet-name>
        <url-pattern>/CtrlModificationQuantite</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlAjouterProduitPanier</servlet-name>
        <url-pattern>/CtrlAjouterProduitPanier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlSupprimerProduitPanier</servlet-name>
        <url-pattern>/CtrlSupprimerProduitPanier</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
